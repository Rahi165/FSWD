    <script>
        function fun(){

            let age=document.getElementById("age").value;

            if(age<18){
                alert("You are minor");
            }
            if(18<age<65){
                alert("you are adult");
            }
            if(age>65){
                alert("you are a senior citizen");
            }
        }
